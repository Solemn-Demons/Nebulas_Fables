<section class="container">
  <!-- If the user is logged in, show dropdown menu and constellation details -->
  {{#if loggedIn}}
    <section>
      <!-- Constellation dropdown -->
      <div class="dropdown">
      <label for="dropdown">Select a constellation:</label> 
          <select name="constellationOption" id="constellationOption"> 
              <option value="Orion">Orion</option> 
              <option value="Scorpio">Scorpio</option> 
          </select>
      </div>
    </section>

    <!-- Constellation details -->
    <h3 class="constellation-name">{{selectedConstellation.name}}</h3>
    <section class="flex-row justify-center">
      <p>Stars:
        <ul class="stars-list">
          {{#each selectedConstellation.stars}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
      </p>
      <p>Facts:
        <ul class="facts-list">
          {{#each selectedConstellation.facts}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
      </p>
    </section>
    <script src="./assets/js/constellation.js"></script>
  {{else}}
    <!-- Provide a link to login if not logged in -->
    <a href="/login">You must login first to view this page</a>
  {{/if}}
</section>